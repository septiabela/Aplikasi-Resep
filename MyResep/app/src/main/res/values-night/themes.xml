        <item name="colorPrimary">@color/brown</item> <!-- Ganti dengan warna coklat -->
        <item name="colorPrimaryVariant">@color/brown_light</item> <!-- Ganti dengan warna coklat muda -->
        <item name="colorOnPrimary">@color/cream</item> <!-- Ganti dengan warna cream -->
